<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/delbg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Itinerary"
        android:id="@+id/textView"
        android:typeface="monospace"
        android:textSize="25dp"
        android:textColor="#010101"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:typeface="monospace"
        android:text="Large Text"
        android:id="@+id/timeText"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/costText"
        android:typeface="monospace"
        android:layout_marginEnd="22dp"
        android:layout_alignBaseline="@+id/timeText"
        android:layout_alignBottom="@+id/timeText"
        android:layout_alignParentEnd="true"
        android:textSize="16sp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dailyList"
        android:choiceMode="none"
        android:layout_below="@+id/timeText"
        android:layout_marginTop="25dp"
        android:layout_above="@+id/viewonMapbtn"
        android:layout_alignStart="@+id/timeText"
        android:layout_alignEnd="@+id/costText" />

    <Button
        android:text="View on Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:background="@color/text1"
        android:minHeight="28dp"
        android:id="@+id/viewonMapbtn"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>